# Configuração do Painel Operacional AlquimistaAI
# Copie este arquivo para .env.local e preencha com os valores corretos

# ========================================
# API URLs
# ========================================

# URL base da Platform API (AlquimistaStack)
NEXT_PUBLIC_PLATFORM_API_URL=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com

# ========================================
# Cognito Configuration
# ========================================

# User Pool ID
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx

# App Client ID
NEXT_PUBLIC_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS Region
NEXT_PUBLIC_AWS_REGION=us-east-1

# Cognito Domain (para OAuth)
NEXT_PUBLIC_COGNITO_DOMAIN=alquimista-auth-dev.auth.us-east-1.amazoncognito.com

# ========================================
# Feature Flags
# ========================================

# Habilitar Painel Operacional
NEXT_PUBLIC_ENABLE_OPERATIONAL_DASHBOARD=true

# Habilitar Dashboard do Cliente
NEXT_PUBLIC_ENABLE_TENANT_DASHBOARD=true

# Habilitar Painel Interno (Company)
NEXT_PUBLIC_ENABLE_COMPANY_PANEL=true

# ========================================
# Cache Configuration
# ========================================

# TTL do cache local (em segundos)
NEXT_PUBLIC_CACHE_TTL=300

# Habilitar cache local
NEXT_PUBLIC_ENABLE_LOCAL_CACHE=true

# ========================================
# Monitoring & Observability
# ========================================

# Habilitar logging detalhado
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false

# Habilitar métricas de performance
NEXT_PUBLIC_ENABLE_PERFORMANCE_METRICS=true

# ========================================
# UI Configuration
# ========================================

# Número de itens por página (paginação)
NEXT_PUBLIC_ITEMS_PER_PAGE=50

# Intervalo de polling para comandos operacionais (ms)
NEXT_PUBLIC_COMMAND_POLLING_INTERVAL=5000

# Timeout de requisições (ms)
NEXT_PUBLIC_REQUEST_TIMEOUT=30000

# ========================================
# Development Only
# ========================================

# Mock de dados (apenas dev)
NEXT_PUBLIC_USE_MOCK_DATA=false

# Bypass de autenticação (apenas dev - NUNCA em prod)
NEXT_PUBLIC_BYPASS_AUTH=false
