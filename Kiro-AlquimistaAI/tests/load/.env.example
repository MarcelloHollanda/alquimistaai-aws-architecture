# Configuração de Ambiente para Testes de Performance

# URL base da API
API_BASE_URL=https://api-dev.alquimistaai.com

# Ambiente de teste (dev, staging, prod)
TEST_ENV=dev

# Tipo de teste (smoke, load, stress, spike, soak, breakpoint, full)
TEST_TYPE=load

# Duração do teste
TEST_DURATION=5m

# Número de VUs (Virtual Users)
TEST_VUS=10

# Cognito (para autenticação real)
COGNITO_AUTH_URL_DEV=https://cognito-idp.us-east-1.amazonaws.com/
COGNITO_CLIENT_ID_DEV=your-client-id-dev

COGNITO_AUTH_URL_STAGING=https://cognito-idp.us-east-1.amazonaws.com/
COGNITO_CLIENT_ID_STAGING=your-client-id-staging

COGNITO_AUTH_URL_PROD=https://cognito-idp.us-east-1.amazonaws.com/
COGNITO_CLIENT_ID_PROD=your-client-id-prod

# Debug mode
DEBUG=false

# Relatórios
REPORT_DIR=tests/load/reports
REPORT_FORMAT=html,json

# Thresholds customizados (opcional)
CUSTOM_P95_THRESHOLD=2000
CUSTOM_ERROR_RATE_THRESHOLD=0.01

# Cache
REDIS_HOST=localhost
REDIS_PORT=6379

# Database (para validação)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alquimista_dev
